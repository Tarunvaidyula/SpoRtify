<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cricket Products</title>
    <link rel="stylesheet" href="/CSS/homepage.css">
    <link rel="stylesheet" href="/CSS/headfo.css">
</head>
<body>
    <header>
        <div class="header-content">
           <a href="homepage"><img src="images/logo.jpg" alt="F1 Store Logo" width="250" height="100"></a>
        </div><br>
        <div class="search-bar">
            <input type="text" placeholder="search">
            <button type="submit"><img src="images/search.jpg" alt="search"></button>
        </div><br>
        <% if (isAuthenticated) {%>
            <a href="logout" style="color: white"><button class="profile-button"><br>Logout</a></button>
        <% } else { %>
    <a href="login" style="color: white"><button class="profile-button"><img src="images/profile-icon.jpg" alt="Profile Icon"><br>Login</a></button>
        <%}%><a href="cart" style="color: white"><button class="cart-button"><img src="images/cart-icon.png" alt="Cart Icon"><br>Cart</a></button>
</div>
    </header>
    <h1>Football Products</h1>
    <div class="product-container">
        <% if (footballProducts && footballProducts.length > 0) { %>
            <% footballProducts.forEach(product => { %>
                <div class="product-box">
                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                    <strong><%= product.name %></strong>
                    <span class="description"><%= product.description %></span>
                    <span class="price">$<%= product.price %></span>
                    <button class="add-to-cart" data-id="<%= product._id %>">Add to Cart</button>
                </div>
            <% }); %>
        <% } else { %>
            <p>No football products available.</p>
        <% } %>
    </div>
</div>
    <footer class="footer">
        <div class="footer-content">
            <div class="column">
            </div>
            <div class="column">
                <h3>Account</h3>
                <ul>
                    <% if (isAuthenticated) {%>
                        <a href="logout" style="color: white"><button class="profile-button"><br>Logout</a></button>
                    <% } else { %>
                <a href="login">Login</a><br>
                <a href="signup">Sign Up</a><br>
                    <%}%>
                    <li><a href="profile">Profile</a></li>
                </ul>
            </div>
            <div class="column">
                <h3>Contact Us</h3>
                <p style="color: white;">Email: @gmail.com</p>
            </div>
        </div>
        <div class="footer-bottom">
            <ul class="social-media">
                <li><b>Follow Us: </b></li>
                <li><a href="https://www.facebook.com"><img src="images/facebook.png" alt="facebook"></a></li>
                <li><a href="https://www.instagram.com"><img src="images/insta.jpeg" alt="instagram"></a></li>
                <li><a href="https://twitter.com"><img src="images/twitter.jpg" alt="twitter"></a></li>
            </ul>
            <p style="color: white">&copy; 2024 F1 Store. All rights reserved.</p>
        </div>
    </footer>
    <script>
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', async () => {
                const productId = button.getAttribute('data-id');
                try {
                    const response = await fetch('/cart/add', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId, quantity: 1 })
                    });
                    const result = await response.json();
                    console.log(result.message);
                } catch (error) {
                    console.error('Error adding product to cart:', error);
                    alert('Error adding product to cart');
                }
            });
        });
    </script>
</body>
</html>
