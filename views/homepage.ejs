<section id="popular-product">
    <div class="product-heading">
        <h2>Cricket Products</h2><br>
    </div>
    <div class="product-container">
        <% if (cricketProducts && cricketProducts.length > 0) { %>
            <% cricketProducts.forEach(product => { %>
                <div class="product-box">
                    <img src="<%= product.image %>" alt="<%= product.name %>"><br><br>
                    <strong><%= product.name %></strong><br><br>
                    <span class="description"><%= product.description %></span>
                    <span class="price">Rs. <%= product.price %></span>
                    <button class="add-to-cart" data-id="<%= product._id %>">Add to Cart</button>
                </div>
            <% }); %>
        <% } else { %>
            <p>No cricket products available.</p>
        <% } %>
    </div><br><br>
    <h2>Football Products</h2><br>
        <div class="product-container">
            <% if (footballProducts && footballProducts.length > 0) { %>
                <% footballProducts.forEach(product => { %>
                    <div class="product-box">
                        <img src="<%= product.image %>" alt="<%= product.name %>"><br><br>
                        <strong><%= product.name %></strong><br><br>
                        <span class="description"><%= product.description %></span>
                        <span class="price">Rs. <%= product.price %></span>
                        <button class="add-to-cart" data-id="<%= product._id %>">Add to Cart</button>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No football products available.</p>
            <% } %>
        </div>
    </div>
    <h2>Basketball Products</h2>
        <div class="product-container">
            <% if (basketballProducts && basketballProducts.length > 0) { %>
                <% basketballProducts.forEach(product => { %>
                    <div class="product-box">
                        <img src="<%= product.image %>" alt="<%= product.name %>">
                        <strong><%= product.name %></strong><br><br>
                        <span class="description"><%= product.description %></span>
                        <span class="price">Rs. <%= product.price %></span>
                        <button class="add-to-cart" data-id="<%= product._id %>">Add to Cart</button>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No baketBall products available.</p>
            <% } %>
        </div>
    </div>
    <h2>Champions Choice</h2>
</section>
